{{template "admin" .}}

{{define "page-title"}}
  New reservations
{{end}}

{{define "content"}}
  <div class="col-md-12">
      {{$res := index .Data "reservations"}}

    <table class="table table-striped table-hover" id="new-res">
      <thead>
      <tr>
        <th>ID</th>
        <th>Last Name</th>
        <th>Room</th>
        <th>Arrival</th>
        <th>Departure</th>
      </tr>
      </thead>

      <tbody>
      {{range $res}}
        <tr>
          <td>{{.ID}}</td>
          <td>
            <a href="/admin/reservations/new/{{.ID}}">{{.LastName}}</a>
          </td>
          <td>{{.Room.RoomName}}</td>
          <td>{{formatDate .StartDate}}</td>
          <td>{{formatDate .EndDate}}</td>
        </tr>
      {{end}}
      </tbody>
    </table>
  </div>
{{end}}

{{template "admin" .}}